{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "#*": ["./src/*", "./mocks"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/*", "./mocks"]
}
